{
  "compilerOptions": {
    "resolveJsonModule": true,
    "outDir": "./built",
    "allowJs": true,
    "target": "es6",
    "moduleResolution": "node",
    "jsx": "preserve",
    "jsxFactory": "h",
    "jsxFragmentFactory": "Fragment",
    "paths": {
      "~/*": ["./*"]
    }
  },
  "include": ["./index.js", "./src/**/*"]
}
